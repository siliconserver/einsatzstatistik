#!/bin/bash
#
# variablen
hostname=localhost
username=root
database=feuerwehr
beginn=18:00:00
ende=19:30:00

echo "Letzte Übung"
echo "-------------"
psql $database $username << EOF
SELECT * FROM uebungen ORDER BY nummer DESC LIMIT 1;
EOF
echo ""
echo ""
echo "Neue Übung"
echo "-------------"
echo ""

# einlesen der daten
echo "Übung Nummer z.B. 4 : "
read nummer
echo "Datum in ISO z.B. 2019-05-25 :"
read datum 
echo "Ort z.B. Woerth :"
read ort
echo "Thema (Belüftung/FwDV3/TH/etc.): "
read thema
echo "Teilnahme (true/false) : "
read teilnahme
echo "Bemerkungen : "
read bemerkungen
echo ""

# daten in db schreiben
echo "Schreibe Datensatz.."
echo "--------------------"
psql $database $username << EOF
INSERT INTO uebungen (nummer,start,ende,ort,thema,teilnahme,bemerkungen) VALUES ('$nummer', '$datum $beginn', '$datum $ende', '$ort', '$thema', '$teilnahme', '$bemerkungen');
EOF

# geschriebene daten von db lesen
echo "Fertiiiig. Guck, hier:"
echo "----------------------"
psql $database $username << EOF
SELECT * FROM uebungen WHERE nummer='$nummer';
EOF
